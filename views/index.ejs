<% include ./partials/header.ejs %>
<div class="ui main text container">
    <div class="ui hige header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(ele){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= ele.image %>" alt="blogImage">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= ele._id %>"><%= ele.title %></a>
                        <div class="meta">
                            <span><%= ele.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- ele.body.substring(0,100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= ele._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ./partials/footer.ejs %>